<%- include('partials/header') %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-container">
        <div class="form-group">
          <label for="titleInput">Title:</label>
          <input type="text" class="form-control" name="titleInput" id="titleInput" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="postInput">Textarea:</label>
          <textarea id="postInput" class="form-control" name="postInput" autocomplete="off" rows="4" cols="50"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" name="button" class="btn btn-primary">Publish</button>
        </div>
      </div>
</form>
<%- include('partials/footer') %>